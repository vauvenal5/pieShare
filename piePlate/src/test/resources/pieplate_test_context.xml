<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />

    <bean id="clusterService" class="org.pieShare.pieTools.piePlate.service.cluster.jgroupsCluster.JGroupsClusterService" scope="prototype" lazy-init="true">
        <property name="receiver" ref="objectReceiver"/>
        <property name="serializerService" ref="serializerService"/>
        <property name="channel" ref="channel"/>
    </bean>

    <bean id="serializerService" class="org.pieShare.pieTools.piePlate.service.serializer.jacksonSerializer.JacksonSerializerService" lazy-init="true">
    </bean>

    <bean id="objectReceiver" class="org.pieShare.pieTools.piePlate.service.cluster.jgroupsCluster.ObjectBasedReceiver" scope="prototype" lazy-init="true">
        <property name="executorService" ref="pieExecutorService"/>
        <property name="serializerService" ref="serializerService"/>
    </bean>

    <bean id="channel" class="org.jgroups.JChannel" scope="prototype" lazy-init="true">
    </bean>
    
    <bean id="beanService" class="org.pieShare.pieTools.pieUtilities.service.beanService.BeanService" lazy-init="true">
    </bean>
    
    <bean id="executorService" class="java.util.concurrent.Executors" lazy-init="true" factory-method="newCachedThreadPool">
    </bean>
    
    <bean id="eventMap" class="java.util.HashMap" lazy-init="true">
    </bean>
    
    <bean id="pieExecutorService" class="org.pieShare.pieTools.pieUtilities.service.pieExecutorService.PieExecutorService" lazy-init="true">
        <property name="beanService" ref="beanService"/>
        <property name="executorService" ref="executorService"/>
        <property name="map" ref="eventMap"/>            
    </bean>
    
    <bean id="testTask" class="org.pieShare.pieTools.piePlate.service.helper.TestTask" lazy-init="true">
        <property name="testServiceCallback" ref="testServiceCallback"/>
    </bean>
    
    <bean id="testServiceCallback" class="org.pieShare.pieTools.piePlate.service.helper.TestServiceCallback" lazy-init="true">
    </bean>
</beans>